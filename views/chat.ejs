<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon" />
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/fonawesome.min.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/fontawesome.min.css" />
    <script src="/js/iziToast.min.js" type="text/javascript"></script>

    <link rel="stylesheet" href="/css/iziToast.min.css" />
    <title>Group Chat</title>
  </head>
  <body style="background-color: #eee">
    <section>
      <div class="container py-1">
        <div class="row d-flex justify-content-center">
          <div class="col-md-6 col-lg-4 col-xl-3 bg-info rounded-4">
            <div id="user"></div>
            <div class="d-grid gap-2 px-2">
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#create-group">
                Add New Group <i class="fas fa-plus mx-2"></i>
              </button>
              <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#add-user-to-group">
                Add User To Group
              </button>
            </div>
            <div id="group-list" class="overflow-auto" style="height: 70vh"></div>
          </div>
          <div class="col-md-8 col-lg-6 col-xl-4">
            <div class="card" id="chat1" style="border-radius: 15px">
              <div
                class="card-header d-flex flex-column justify-content-between align-items-center p-3 bg-info text-white border-bottom-0"
                style="border-top-left-radius: 15px; border-top-right-radius: 15px"
              >
                <p class="mx-auto mb-0 fw-bold h3" id="selected-group">Select A Group</p>
                <!-- <p style="margin-bottom: 0;"><small>Online : <span id="online-user">2</span></small></p> -->
              </div>
              <div id="message-box" class="card-body overflow-auto" style="height: 77vh"></div>
              <form class="position-relative" id="chat-form">
                <input class="form-control" id="new-message" style="height: 100%" />
                <svg
                  id="submit-btn"
                  style="top: 0; right: 5px; height: 100%; color: rgb(0, 195, 255); cursor: pointer"
                  class="position-absolute bi bi-telegram"
                  width="30"
                  height="30"
                  fill="currentColor"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.287 5.906q-1.168.486-4.666 2.01-.567.225-.595.442c-.03.243.275.339.69.47l.175.055c.408.133.958.288 1.243.294q.39.01.868-.32 3.269-2.206 3.374-2.23c.05-.012.12-.026.166.016s.042.12.037.141c-.03.129-1.227 1.241-1.846 1.817-.193.18-.33.307-.358.336a8 8 0 0 1-.188.186c-.38.366-.664.64.015 1.088.327.216.589.393.85.571.284.194.568.387.936.629q.14.092.27.187c.331.236.63.448.997.414.214-.02.435-.22.547-.82.265-1.417.786-4.486.906-5.751a1.4 1.4 0 0 0-.013-.315.34.34 0 0 0-.114-.217.53.53 0 0 0-.31-.093c-.3.005-.763.166-2.984 1.09"
                  />
                </svg>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%- include("./modals/create-group.ejs") %> <%- include("./modals/add-to-group.ejs") %>
    <script src="/js/socket.io.min.js"></script>
    <script src="/js/axios.js"></script>
    <script src="/js/chat.js"></script>
  </body>
</html>
